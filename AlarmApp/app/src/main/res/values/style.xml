<?xml version="1.0" encoding="utf-8"?>
<resources>
   <!--Font-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/poppinsbold</item>
        <item name="fontFamily">@font/poppinsmedium</item>
    </style>

   <!--TimePicker Style-->
    <style name="CustomTimePicker" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">@color/brown</item>
        <item name="android:numbersTextColor">@android:color/black</item>
        <item name="android:numbersBackgroundColor">#e0e0e0</item>
        <item name="android:numbersSelectorColor">#795548</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:timePickerStyle">@style/CustomTimePicker</item>
    </style>

    <!--Switch-->
    <style name="mySwitch">
        <item name="android:colorControlActivated">@color/brown</item>
    </style>
</resources>